{
  "manifest": {

    "label": "TV-Programm",
    "appname": "tvguide",
    "appicon": "tvguide_175x175.png",
    "appserver": "epg.xavaro.de",
    "preferences": true,

    "permissions": [
      "domstorage",
      "request",
      "utility",
      "media",
      "prefs"
    ],

    "weblibs": [
      "simple",
      "touch",
      "strings",
      "dialog"
    ],

    "preload": [
      "Description.js",
      "DeMoronize.js"
    ],

    "files": [
      "main.js"
    ],

    "cachedefs": [
      { "interval": 24, "pattern": ".*\\.js" },
      { "interval": 72, "pattern": ".*\\.png" },
      { "interval": 72, "pattern": ".*\\.jpg" },
      { "interval": 24, "pattern": ".*\\.json" },
      { "interval": 24, "pattern": ".*\\.json\\.gz" },

      { "interval": -1, "pattern": "https://.*?.wikipedia.org/.*" },
      { "interval": -1, "pattern": "https://.*?.wikimedia.org/.*" },
      { "interval": -1, "pattern": "http://epg.xavaro.de/pgminfo/.*" },
      { "interval":  0, "pattern": "http://epg.xavaro.de/epgdata/.*" },
      { "interval":  0, "pattern": "http://epg.xavaro.de/channels/.*" }
    ]
  }
}
