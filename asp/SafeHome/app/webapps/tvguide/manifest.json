{
  "manifest": {

    "label": "TV-Programm",
    "appname": "tvguide",
    "appicon": "tvguide_175x175.png",
    "appserver": "epg.xavaro.de",
    "preferences": true,
    "voice": true,

    "permissions": [
      "domstorage",
      "request",
      "utility",
      "media",
      "prefs"
    ],

    "weblibs": [
      "simple",
      "touch",
      "strings",
      "dialog"
    ],

    "preload": [
      "Description.js",
      "DeMoronize.js"
    ],

    "files": [
      "main.js"
    ],

    "locale": [
      "strings.json",
      "strings.de-rDE.json"
    ],

    "cachedefs": [
      { "interval": -1, "pattern": "https://.*?.wikipedia.org/.*" },
      { "interval": -1, "pattern": "https://.*?.wikimedia.org/.*" },
      { "interval": -1, "pattern": "http://epg.xavaro.de/pgminfo/.*" },
      { "interval": 24, "pattern": "http://epg.xavaro.de/epgdata/.*" },
      { "interval": 24, "pattern": "http://epg.xavaro.de/channels/.*" }
    ]
  }
}
