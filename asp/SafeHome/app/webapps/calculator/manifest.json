{
  "manifest": {

    "label": "Rechner",
    "appname": "calculator",
    "appicon": "calculator_512x512.png",
    "voice": true,

    "permissions": [
      "speak",
      "request",
      "utility"
    ],

    "weblibs": [
      "simple",
      "touch",
      "strings",
      "dialog"
    ],

    "files": [
      "main.js"
    ],

    "locale": [
      "strings.json",
      "strings.de-rDE.json"
    ],

    "cachedefs": [
      { "interval": 24, "pattern": ".*\\.js" },
      { "interval": 72, "pattern": ".*\\.png" },
      { "interval": 24, "pattern": ".*\\.json" }
    ]
  }
}
